{
  "extends": ["tslint:latest", "tslint-eslint-rules", "tslint-react", "tslint-config-airbnb", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": [
      "node_modules/**",
      "dist/**",
      "lib/bin/**",
      "playground/*.*",
      "exports/**",
      "imports/**",
      "coverage/lcov-report/**"
    ]
  },
  "rules": {
    //Disable for TypeScript
    "import-name": false,
    "no-console": false,
    "interface-name": false,
    "ordered-imports": false,
    "object-literal-sort-keys": false,
    "no-consecutive-blank-lines": false,
    "trailing-comma": false,
    "arrow-parens": [false, "as-needed"],
    "curly": [false, "as-needed"],
    "max-line-length": {
      "options": [120]
    },
    "no-submodule-imports": false,
    "ter-arrow-parens": false
  },

  "jsRules": {
    //Disable for JavaScript
    "object-literal-sort-keys": false,
    "no-console": false,
    "max-line-length": {
      "options": [120]
    },
    "no-submodule-imports": false
  }
}

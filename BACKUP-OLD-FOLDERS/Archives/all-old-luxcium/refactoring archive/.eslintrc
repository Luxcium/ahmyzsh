{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "extends": ["airbnb", "prettier"],
  "globals": {
    "_": false,
    "$": false
  },
  "parser": "typescript-eslint-parser",
  "parserOptions": {
    "ecmaVersion": 2015,
    "sourceType": "module"
  },
  "plugins": ["prettier", "react", "import", "jsx-a11y"],
  "rules": {
    "max-len": ["off", {"ignoreComments": true}],
    "no-tabs": "off",
    "prefer-destructuring": "off",
    "arrow-parens": ["off"],
    "no-console": ["off"],
    "indent": ["error", 2],
    "linebreak-style": "off",
    "prettier/prettier": "error",
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  }
}

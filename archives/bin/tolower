# tolower
# set AZ text to lower case

function tolower_() {
  (echo -n "${@}" | tr \[A-Z\] \[a-z\])
}

## Extra code make it easy to copy paste only the function out to use elsewhere
tolower_ "${@}"

EXIT_="${?}"

unset -f tolower_

exit $EXIT_

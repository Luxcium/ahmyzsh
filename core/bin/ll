#!/bin/sh

function ll_() {
  (
    echo ''
    builtin cd "${@:-$(pwd)}"
    [[ -x $(which lolcat) ]] && (pwd | lolcat "${@}") || ([[ -x $(which /bin/pwd) ]] && /bin/pwd)
    [[ -x $(which colorls) ]] && (colorls -lA --sd --gs) || ([[ -x $(which /bin/ls) ]] && /bin/ls --color=auto -hal)
    [[ -x $(which lolcat) ]] && (pwd | lolcat "${@}") || ([[ -x $(which /bin/pwd) ]] && /bin/pwd)
    echo ''
  )
}

## Extra code make it easy to copy paste only the function out to use elsewhere
ll_ $@

unset ll_

exit 0

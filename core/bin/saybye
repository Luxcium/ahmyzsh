#!/bin/env sh

function saybye_() {
  echo -e "\u001b[1A"
  echo -en "\e[38;2;252;198;36m                                    \u001b[1000D"
  sleep 0.085
  echo -en "\e[38;2;252;198;36m          B                         \u001b[1000D"
  sleep 0.085
  echo -en "\e[38;2;252;198;36m         BY                         \u001b[1000D"
  sleep 0.085
  echo -en "\e[38;2;252;198;36m        BYE                         \u001b[1000D"
  sleep 0.085
  echo -en "\e[38;2;252;198;36m       BYE                          \u001b[1000D"
  sleep 0.085
  echo -en "\e[38;2;252;198;36m      BYE !                         \u001b[1000D"
  sleep 0.085
  echo -en "\e[38;2;252;198;36m     BYE !!                         \u001b[1000D"
  sleep 0.085
  echo -en "\e[38;2;252;198;36m    BYE !!!                         \u001b[1000D"
  sleep 0.085
  echo -en "\e[38;2;252;198;36m   BYE !!!                          \u001b[1000D"
  sleep 0.085
  echo -en "\e[38;2;252;198;36m  BYE !!!                           \u001b[1000D"
  sleep 0.085
  echo -en "\e[38;2;252;198;36m  YE !!!                            \u001b[1000D"
  sleep 0.085
  echo -en "\e[38;2;252;198;36m  E !!!                             \u001b[1000D"
  sleep 0.085
  echo -en "\e[38;2;252;198;36m   !!!                              \u001b[1000D"
  sleep 0.085
  echo -en "\e[38;2;252;198;36m  !!!                               \u001b[1000D"
  sleep 0.085
  echo -en "\e[38;2;252;198;36m  !!                                \u001b[1000D"
  sleep 0.085
  echo -en "\e[38;2;252;198;36m  !                                 \u001b[1000D"
  sleep 0.085
  echo -en "\e[38;2;252;198;36m                           \u001b[1000D\a${RSET}"
}

## Extra code make it easy to copy paste only the function out to use elsewhere
saybye_ "${@}"

__EXIT_STATUS="${?}"

unset -f saybye_

exit $__EXIT_STATUS

#!/usr/bin/env zsh

# Backup my vscode and my insiders into /etc/vscode-portable/backup

## TODO: REMOVE HARD CONFIGURED LINKS

mkdir -p "/etc/vscode-portable/backup/code/data/user-data"
mkdir -p "/etc/vscode-portable/backup/code/data/tmp"
mkdir -p "/etc/vscode-portable/backup/code/data/extensions"

mkdir -p "/etc/vscode-portable/backup/code-insiders/data/user-data"
mkdir -p "/etc/vscode-portable/backup/code-insiders/data/tmp"
mkdir -p "/etc/vscode-portable/backup/code-insiders/data/extensions"

(cp -vuLr /home/luxcium/.config/Code/* /etc/vscode-portable/backup/code/data/user-data/) &
(cp -vuLr /home/luxcium/.vscode/extensions/* /etc/vscode-portable/backup/code/data/extensions/) &

(cp -vuLr /home/luxcium/.config/'Code - Insiders'/* /etc/vscode-portable/backup/code-insiders/data/user-data/) &
(cp -vuLr /home/luxcium/.vscode-insiders/extensions/* /etc/vscode-portable/backup/code-insiders/data/extensions/) &

exit 0
